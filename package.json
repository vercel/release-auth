{
  "name": "release-auth",
  "version": "1.0.3",
  "private": true,
  "scripts": {
    "start": "micro",
    "dev": "micro-dev",
    "test": "xo",
    "deploy": "now -e CLIENT_ID=@release-auth-id -e CLIENT_SECRET=@release-auth-secret",
    "precommit": "npm run test"
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "rules": {
      "unicorn/no-process-exit": 0,
      "camelcase": 0
    }
  },
  "now": {
    "alias": "release-auth.zeit.sh"
  },
  "repository": "zeit/release-auth",
  "license": "MIT",
  "dependencies": {
    "micro": "8.0.1",
    "request": "2.88.0",
    "request-promise-native": "1.0.5"
  },
  "devDependencies": {
    "husky": "0.14.3",
    "micro-dev": "1.0.2",
    "xo": "0.23.0"
  }
}
